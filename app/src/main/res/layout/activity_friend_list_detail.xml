<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/friendDetailContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/lofriendName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvFriendDetailName"
                android:text="닉네임"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/friendDetailName"
                android:layout_toLeftOf="@+id/friendDetailName"
                android:layout_toStartOf="@+id/friendDetailName" />

            <TextView
                android:id="@+id/friendDetailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/friendNameAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/friendDetailName"
                android:layout_toEndOf="@+id/friendDetailName"
                android:hint="친구ID를 입력하세요."/>
            <Button
                android:id="@+id/btFriendAddOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/friendNameAdd"
                android:text="확인"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lofriendDrink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lofriendName">

            <TextView
                android:id="@+id/tvFriendDetailDrink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/friendDetailDrink"
                android:layout_toLeftOf="@+id/friendDetailDrink"
                android:layout_toStartOf="@+id/friendDetailDrink" />

            <TextView
                android:id="@+id/friendDetailDrink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lofriendLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lofriendDrink">

            <TextView
                android:id="@+id/tvFriendDetailLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/btFriendDetailLight"
                android:layout_toLeftOf="@+id/btFriendDetailLight"
                android:layout_toStartOf="@+id/btFriendDetailLight"
                android:text="전구 색" />

            <Button
                android:id="@+id/btFriendDetailLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHANGE" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/lofriendLight"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/btFriendSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장"/>
        <Button
            android:id="@+id/btFriendAddCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>